<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:background = "@drawable/offerride_bg"
              android:orientation = "vertical"
              tools:context = "car.sharewhere.gagan.sharewherecars.fragments.OfferA_a_Ride">

    <include layout = "@layout/actionbar_toolbar"/>


    <FrameLayout
        android:id = "@+id/frame_container"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:clickable = "true"/>


    <RelativeLayout
        android:id = "@+id/rel_just_once"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "40dp"
        android:background = "@mipmap/offr_txt_field">

        <ImageView
            android:id = "@+id/taxi"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentLeft = "true"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:src = "@mipmap/blackcar"/>

        <LinearLayout
            android:id = "@+id/lnr_txt"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerInParent = "true"
            android:layout_toLeftOf = "@+id/btn1"
            android:layout_toRightOf = "@+id/taxi"
            android:orientation = "vertical"
            android:paddingBottom = "10dp"
            android:paddingLeft = "10dp"
            android:paddingTop = "10dp">

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/one_time"
                android:textColor = "#000000"
                android:textSize = "18dp"
                android:textStyle = "bold"/>

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:ellipsize = "end"
                android:lines = "2"
                android:maxLines = "2"
                android:minLines = "2"
                android:paddingTop = "5dp"
                android:singleLine = "false"
                android:text = "@string/just_once"
                android:textColor = "#000000"/>
        </LinearLayout>

        <ImageView
            android:id = "@+id/btn1"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:background = "@mipmap/arrow"/>

    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/regular_basis"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@mipmap/offr_txt_field"
        android:paddingLeft = "10dp">

        <ImageView
            android:id = "@+id/taxi1"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentLeft = "true"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "5dp"
            android:layout_marginRight = "10dp"
            android:src = "@mipmap/blackcar"/>

        <LinearLayout
            android:id = "@+id/lnr_txt2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_toRightOf = "@+id/taxi1"
            android:gravity = "center"
            android:orientation = "vertical">

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop = "10dp"
                android:ellipsize = "end"
                android:text = "@string/daily"
                android:textColor = "@color/black"
                android:textSize = "18dp"
                android:textStyle = "bold"/>

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:ellipsize = "end"
                android:lines = "2"
                android:maxLines = "2"
                android:minLines = "2"
                android:paddingRight="20dp"
                android:paddingTop = "5dp"
                android:singleLine = "false"
                android:text = "@string/just_once"
                android:textColor = "#000000"/>

        </LinearLayout>

        <ImageView
            android:id = "@+id/btn2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:background = "@mipmap/arrow"/>

    </RelativeLayout>


    <LinearLayout
        android:id = "@+id/llay_ride_request"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@mipmap/offr_txt_field"
        android:gravity = "center_vertical"
        android:paddingLeft = "10dp">

        <ImageView
            android:id = "@+id/taxi2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "5dp"
            android:layout_marginRight = "10dp"
            android:src = "@mipmap/blackcar"/>


        <LinearLayout
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:gravity = "center_vertical"
            android:orientation = "vertical">


            <TextView
                android:id = "@+id/txtv_request_message_heading"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:paddingLeft = "10dp"
                android:text = "Ride Requests &amp; Messages"
                android:textColor = "@color/black"
                android:textSize = "17dp"
                android:textStyle = "bold"/>

            <TextView
                android:id = "@+id/txtv_request_message"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:ellipsize = "end"
                android:lines = "2"
                android:maxLines = "2"
                android:minLines = "2"
                android:paddingLeft = "10dp"
                android:paddingTop = "3dp"
                android:singleLine = "false"
                android:text = ""
                android:textColor = "#000000"/>

        </LinearLayout>


        <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:background = "@mipmap/arrow"/>

    </LinearLayout>

</LinearLayout>
