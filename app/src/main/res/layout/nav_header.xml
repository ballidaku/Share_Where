<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/yellow2"
    android:elevation="2dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">


    <car.ameba.ridelele.utills.RoundedCornersGaganImg
        android:id="@+id/imgProfilePic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_default_pic_rounded"
        android:elevation="2dp"
        android:padding="2dp"
        android:transitionName="@string/profile_pic_transition" />


    <TextView
        android:id="@+id/txtvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/user_name"
        android:textColor="@color/yellow_old"
        android:textSize="17sp"
        android:textStyle="bold"
        android:transitionName="@string/profile_pic_transition" />

</LinearLayout>